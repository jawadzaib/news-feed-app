{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Module Resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Incremental Builds */
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",

    /* Node.js specific types for build tools (e.g., vite.config.ts) */
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"],
    "allowSyntheticDefaultImports": true,
    "composite": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"] // Explicitly exclude node_modules
}
